<div class="title-category-index">
  <h2>Category</h2>
</div>

<div class="row list-categories">
  <% @categories.each do |category| %>
      <div class="category-name">
        <%= link_to category.name, category %>
      </div>
  <% end %>
</div>

<div class="row">
  <% @images.each do |image| %>
      <div class='col col-md-4 category-index-main-div'>
        <div class="row img-on-category-index">
          <%= link_to image_tag(image.img_url.thumb.url), image %>
          <i class="fa fa-thumbs-up"></i>
        </div>
        <div class="row description-image">
          <img src="http://res.cloudinary.com/pashadelic/image/upload/cs_srgb,c_fill,h_350,w_350/linvgsedp8xihjp7igfw.jpg" alt="avatar" class="avatar">
          <%= 'created by ' + image.user.name %>
        </div>
      </div>
  <% end %>
</div>