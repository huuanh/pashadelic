<div class="title-category-index">
  <h2>Category</h2>
</div>

<div class="row list-categories">
  <% @categories.each do |category| %>
      <div class="category-name">
        <%= link_to category.name, category %>
      </div>
  <% end %>
</div>

<div class="row">
  <% @images.each do |image| %>
      <div class='col col-md-4 category-index-main-div'>
        <div class="row img-on-category-index">
          <%= link_to image_tag(image.img_url.thumb.url), image %>
          <%= link_to '<i class="fa fa-thumbs-up"></i>'.html_safe, like_image_path(image), remote: true %>
        </div>
        <div class="description-image">
          <%= image_tag (image.user.avatar_url), class: 'avatar' %>
          Created by <%= link_to image.user.name, user_path(image.user) %>
          <%= render 'images/image_statistical', image: image %>
        </div>
      </div>
  <% end %>
</div>